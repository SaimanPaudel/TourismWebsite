@model IEnumerable<Tourism_Website.Models.Tour>

@{
    ViewBag.Title = "Tours";
}

<link rel="stylesheet" href="~/Content/tours.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #8e4433;">Available Tours</h2>
        <a href="@Url.Action("Create", "Tour")" class="btn create-btn px-3 py-2">
            <i class="fa fa-plus"></i> Create New Tour
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm" style="background-color:#f8f2f0; color:#000; border-radius:10px;">
            No tours have been added yet. Be the first to create one!
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="tour-section mb-4 d-flex gap-3">

                <!-- Tour Image -->
                <div class="col-md-5 p-0">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="@item.Title" style="width:100%; height:250px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center" style="height:250px; background:#ddd;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                </div>

                <!-- Tour Details -->
                <div class="col-md-7">
                    <h4 class="mb-2" style="color:#8e4433;">@item.Title</h4>
                    <p class="text-muted mb-1"><i class="fa fa-map-marker-alt"></i> @item.Destination</p>
                    <p>@(item.Description.Length > 150 ? item.Description.Substring(0, 150) + "..." : item.Description)</p>
                    <div class="mb-2">
                        <span class="badge" style="background-color:#fdd835; color:#000; font-size:14px;">💰 $@item.Price AUD</span>
                        <span class="badge bg-secondary ms-2">⏳ @item.DurationDays Days</span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <a href="@Url.Action("Details", "Tour", new { id=item.Id })" class="btn action-btn view-btn">
                            <i class="fa fa-eye"></i> View
                        </a>
                        <a href="@Url.Action("Edit", "Tour", new { id=item.Id })" class="btn action-btn edit-btn">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Tour", new { id=item.Id })" class="btn action-btn delete-btn">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                        <a href="@Url.Action("Create", "Booking", new { tourId=item.Id })" class="btn action-btn book-btn">
                            <i class="fa fa-ticket-alt"></i> Book Now
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    /* Base button style */
    .action-btn {
        background-color: #f8f2f0;
        border: 1px solid #8e4433;
        color: #8e4433;
        padding: 6px 12px;
        border-radius: 8px;
        transition: 0.3s;
        text-decoration: none;
    }

    /* Hover colors */
    .view-btn:hover {
        background-color: #6c757d; /* gray */
        color: #fff;
    }

    .edit-btn:hover {
        background-color: #007bff; /* blue */
        color: #fff;
    }

    .delete-btn:hover {
        background-color: #dc3545; /* red */
        color: #fff;
    }

    .book-btn:hover {
        background-color: #28a745; /* green */
        color: #fff;
    }
</style>
