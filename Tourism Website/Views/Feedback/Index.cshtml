@model IEnumerable<Tourism_Website.Models.Feedback>
@{
    ViewBag.Title = "Feedback";
    var userRole = (Session["UserRole"] as string) ?? "";
    var userIdString = (Session["UserId"]?.ToString()) ?? "";
}

<div class="container px-0">

    <div class="card shadow-sm border-0 rounded-4">
        <!-- Brown header like the details pages -->
        <div class="card-header text-white py-3" style="background:#8e4433;">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Feedback</h2>

                @* Only Tourists can create feedback *@
                @if (userRole == "Tourist")
                {
                    <a href="@Url.Action("Create","Feedback")" class="btn btn-outline-light">
                        <i class="fa fa-plus"></i> Add Feedback
                    </a>
                }
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="card-body">
                <div class="alert alert-info shadow-sm mb-0" style="background:#f8f2f0;border:0;color:#000;">
                    No feedback found.
                </div>
            </div>
        }
        else
        {
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0 feedback-table">
                        <thead class="table-light">
                            <tr>
                                <th>Tour</th>
                                <th>Name</th>
                                <th class="text-center" style="width:140px;">Rating</th>
                                <th>Comments</th>
                                <th style="width:140px;">Date</th>
                                <th class="text-end" style="width:240px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                // Only Admin or the Tourist who authored this feedback may manage it
                                var canManageThis = (userRole == "Admin") ||
                                                    (userRole == "Tourist" && item.UserId.ToString() == userIdString);

                                <tr>
                                    <td>@(item.Tour != null ? item.Tour.Title : "—")</td>

                                    <td>@(item.User != null ? item.User.FullName : "—")</td>

                                    <td class="text-center">
                                        @{
                                            var r = item.Rating;
                                            var stars = new string('★', Math.Max(0, Math.Min(r, 5))) +
                                                        new string('☆', Math.Max(0, 5 - Math.Min(r, 5)));
                                        }
                                        <span class="rating-stars"
                                              title="@($"{r}/5")"
                                              aria-label="@($"{r} out of 5")">
                                            @stars
                                        </span>
                                    </td>

                                    <td>
                                        @{
                                            var text = item.Comments ?? "";
                                            var shortText = text.Length > 100 ? (text.Substring(0, 100) + "...") : text;
                                        }
                                        @(string.IsNullOrWhiteSpace(text) ? "—" : shortText)
                                    </td>

                                    <td>@item.DatePosted.ToString("yyyy-MM-dd")</td>

                                    <td class="text-end">
                                        <div class="d-flex flex-wrap justify-content-end gap-2">
                                            <a href="@Url.Action("Details","Feedback", new { id = item.FeedbackId })"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="fa fa-eye"></i> View
                                            </a>

                                            @if (canManageThis)
                                            {
                                                <a href="@Url.Action("Edit","Feedback", new { id = item.FeedbackId })"
                                                   class="btn btn-sm btn-outline-secondary">
                                                    <i class="fa fa-pen"></i> Edit
                                                </a>
                                                <a href="@Url.Action("Delete","Feedback", new { id = item.FeedbackId })"
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Are you sure you want to delete this feedback?');">
                                                    <i class="fa fa-trash"></i> Delete
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer small text-muted d-flex justify-content-between align-items-center">
                <div>
                    <i class="fa fa-circle-info"></i>
                    Ratings shown with stars (max 5). Comments are truncated in the list for readability.
                </div>
                <div></div>
            </div>
        }
    </div>
</div>

<style>
    .btn-brand {
        background-color: #8e4433;
        color: #fff;
        border: 0;
    }

        .btn-brand:hover {
            background-color: #6b3025;
            color: #fff;
        }

    .rating-stars {
        font-size: 1rem;
        letter-spacing: .12rem;
        line-height: 1;
        color: #f5c518; /* gold */
        white-space: nowrap;
        display: inline-block;
    }

    .feedback-table tbody tr:hover td {
        background: #fffaf7;
    }

    .table thead th {
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }
</style>
