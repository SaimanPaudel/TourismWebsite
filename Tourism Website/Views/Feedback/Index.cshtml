@model IEnumerable<Tourism_Website.Models.Feedback>
@{
    ViewBag.Title = "Feedback";
    var userRole = (Session["UserRole"] as string) ?? "";
    var userIdString = (Session["UserId"]?.ToString()) ?? "";
}

<div class="container px-0">
    <!-- Header / Toolbar -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <h2 class="mb-2" style="color:#8e4433;">Feedback</h2>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Create","Feedback")" class="btn btn-brand">
                <i class="fa fa-plus"></i> Add Feedback
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm" style="background:#f8f2f0;border:0;color:#000;">
            No feedback found.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <!-- match Manage Users / Bookings: light header -->
                        <thead class="table-light">
                            <tr>
                                <th>Tour</th>
                                <th>Name</th>
                                <th class="text-center" style="width:140px;">Rating</th>
                                <th>Comments</th>
                                <th style="width:140px;">Date</th>
                                <th class="text-end" style="width:240px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var canManage = userRole == "Admin" || userRole == "Agency" || userRole == "Guide"
                                                || (item.UserId.ToString() == userIdString);

                                <tr>
                                    <td>@(item.Tour != null ? item.Tour.Title : "—")</td>

                                    <td>@(item.User != null ? item.User.FullName : "—")</td>

                                    <!-- Rating as stars + badge number -->
                                    <td class="text-center">
                                        @{
                                            var r = item.Rating;
                                            var stars = new string('★', Math.Max(0, Math.Min(r, 5))) +
                                                        new string('☆', Math.Max(0, 5 - Math.Min(r, 5)));
                                        }
                                        <div class="d-inline-flex flex-column align-items-center">
                                            <div class="rating-stars">@stars</div>
                                            <span class="badge badge-rating">@r</span>
                                        </div>
                                    </td>

                                    <td>
                                        @{
                                            var text = item.Comments ?? "";
                                            var shortText = text.Length > 100 ? (text.Substring(0, 100) + "...") : text;
                                        }
                                        @(string.IsNullOrWhiteSpace(text) ? "—" : shortText)
                                    </td>

                                    <td>@item.DatePosted.ToString("yyyy-MM-dd")</td>

                                    <td class="text-end">
                                        <div class="d-flex flex-wrap justify-content-end gap-2">
                                            <a href="@Url.Action("Details","Feedback", new { id = item.FeedbackId })"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="fa fa-eye"></i> View
                                            </a>

                                            @if (canManage)
                                            {
                                                <a href="@Url.Action("Edit","Feedback", new { id = item.FeedbackId })"
                                                   class="btn btn-sm btn-outline-secondary">
                                                    <i class="fa fa-pen"></i> Edit
                                                </a>
                                                <a href="@Url.Action("Delete","Feedback", new { id = item.FeedbackId })"
                                                   class="btn btn-sm btn-outline-danger"
                                                   onclick="return confirm('Are you sure you want to delete this feedback?');">
                                                    <i class="fa fa-trash"></i> Delete
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer small text-muted d-flex justify-content-between align-items-center">
                <div>
                    <i class="fa fa-circle-info"></i>
                    Ratings shown with stars (max 5). Comments are truncated in the list for readability.
                </div>
                <div><!-- placeholder for pagination if needed --></div>
            </div>
        </div>
    }
</div>

<style>
    /* Brand button (same as Bookings/Manage Users) */
    .btn-brand {
        background-color: #8e4433;
        color: #fff;
        border: 0;
    }

        .btn-brand:hover {
            background-color: #6b3025;
            color: #fff;
        }

    /* Rating visuals */
    .rating-stars {
        font-size: 1rem;
        letter-spacing: .1rem;
        line-height: 1;
        color: #f5c518; /* gold-like for filled stars */
    }

    .badge-rating {
        margin-top: .25rem;
        background: #8e4433;
        color: #fff;
        font-weight: 600;
        padding: .35rem .55rem;
        border-radius: .5rem;
    }

    .table thead th {
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }
</style>
