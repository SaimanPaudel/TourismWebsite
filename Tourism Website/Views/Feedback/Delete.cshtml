@model Tourism_Website.Models.Feedback
@{
    ViewBag.Title = "Delete Feedback";
}

<div class="container px-0">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0" style="color:#8e4433;">Delete Feedback</h2>
        <a href="@Url.Action("Index","Feedback", new { tourId = Model.TourId })" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="fa fa-triangle-exclamation me-2"></i>
        Are you sure you want to delete this feedback? This action cannot be undone.
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="text-muted small mb-1">Tour</div>
                    <div class="fw-semibold">@Model.Tour?.Title</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small mb-1">Author</div>
                    <div class="fw-semibold">@Model.User?.FullName</div>
                </div>

                <div class="col-md-4">
                    <div class="text-muted small mb-1">Rating</div>
                    <div class="fw-semibold">@Model.Rating</div>
                </div>

                <div class="col-md-4">
                    <div class="text-muted small mb-1">Date Posted</div>
                    <div class="fw-semibold">@Model.DatePosted.ToString("yyyy-MM-dd HH:mm")</div>
                </div>

                <div class="col-md-12">
                    <div class="text-muted small mb-1">Comments</div>
                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(Model.Comments) ? Model.Comments : "—")</div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.FeedbackId)

                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Delete
                </button>
                <a href="@Url.Action("Index","Feedback", new { tourId = Model.TourId })" class="btn btn-outline-secondary">
                    Cancel
                </a>
            }
        </div>
    </div>
</div>

<style>
    .btn-brand {
        background-color: #8e4433;
        color: #fff;
        border: 0;
    }

        .btn-brand:hover {
            background-color: #6b3025;
            color: #fff;
        }
</style>
