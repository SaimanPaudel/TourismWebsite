@model Tourism_Website.Models.Booking
@{
    ViewBag.Title = "Book a Tour";
    var userRole = Session["UserRole"] as string ?? "";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4" style="color:#8e4433;">Book Your Tour</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Tour Dropdown (visible for all; can disable for certain roles if needed) -->
            <div class="mb-3">
                @Html.LabelFor(m => m.TourId, "Tour", new { @class = "form-label" })
                @if (userRole == "Admin" || userRole == "Agency" || userRole == "Guide")
                {
                    @Html.DropDownList("TourId", (SelectList)ViewBag.TourId, "-- Select Tour --", new { @class = "form-select", id = "TourId" })
                }
                else
                {
                    <!-- For Tourists or others, show as readonly with single selected -->
                    @Html.DropDownList("TourId", (SelectList)ViewBag.TourId, new { @class = "form-select", id = "TourId", @disabled = "disabled" })
                    @* You may want to show the selected tour title in a hidden field to submit *@
                    @Html.HiddenFor(m => m.TourId)
                }
                @Html.ValidationMessageFor(m => m.TourId, "", new { @class = "text-danger" })
            </div>

            <!-- Number of People -->
            <div class="mb-3">
                @Html.LabelFor(m => m.NumberOfPeople, "Number of People", new { @class = "form-label" })
                @Html.EditorFor(m => m.NumberOfPeople, new { htmlAttributes = new { @class = "form-control", id = "NumberOfPeople", min = "1" } })
                @Html.ValidationMessageFor(m => m.NumberOfPeople, "", new { @class = "text-danger" })
            </div>

            <!-- Total Price (readonly) -->
            <div class="mb-3">
                @Html.LabelFor(m => m.TotalPrice, "Total Price", new { @class = "form-label" })
                @Html.EditorFor(m => m.TotalPrice, new { htmlAttributes = new { @class = "form-control", id = "TotalPrice", @readonly = "readonly" } })
            </div>

            <!-- Special Requests -->
            <div class="mb-3">
                @Html.LabelFor(m => m.SpecialRequests, "Special Requests", new { @class = "form-label" })
                @Html.TextAreaFor(m => m.SpecialRequests, new { @class = "form-control", rows = 3 })
            </div>

            <div class="text-center">
                <input type="submit" value="Book Now" class="btn btn-success px-4 py-2" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var tourPrices = {};
        @foreach (var tour in (List<Tourism_Website.Models.Tour>)ViewBag.AllTours)
        {
            <text>tourPrices[@tour.Id] = @tour.Price;</text>
        }

        function updatePrice() {
            var tourId = $("#TourId").val();
            var people = $("#NumberOfPeople").val();
            if (tourId && people) {
                $("#TotalPrice").val(tourPrices[tourId] * people);
            } else {
                $("#TotalPrice").val('');
            }
        }

        $("#TourId, #NumberOfPeople").on("change keyup", updatePrice);
        updatePrice();
    </script>
}
