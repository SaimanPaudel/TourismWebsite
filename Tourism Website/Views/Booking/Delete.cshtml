@model Tourism_Website.Models.Booking
@{
    ViewBag.Title = "Delete Booking";

    var status = (Model.Status ?? "").ToLower();
    var statusClass = status == "confirmed" ? "bg-success text-white"
                   : status == "pending" ? "bg-warning text-dark"
                   : status == "cancelled" ? "bg-danger text-white"
                   : "bg-secondary text-white";
}

<div class="container px-0">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0" style="color:#8e4433;">Delete Booking</h2>
        <a href="@Url.Action("Index","Booking")" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="fa fa-triangle-exclamation me-2"></i>
        Are you sure you want to delete this booking? This action cannot be undone.
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="text-muted small mb-1">Tour</div>
                    <div class="fw-semibold">@Model.Tour?.Title</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small mb-1">Tourist</div>
                    <div class="fw-semibold">@Model.Tourist?.FullName</div>
                </div>

                <div class="col-md-4">
                    <div class="text-muted small mb-1">Booking Date</div>
                    <div class="fw-semibold">@Model.BookingDate.ToString("yyyy-MM-dd")</div>
                </div>

                <div class="col-md-4">
                    <div class="text-muted small mb-1">People</div>
                    <div class="fw-semibold">@Model.NumberOfPeople</div>
                </div>

                <div class="col-md-4">
                    <div class="text-muted small mb-1">Total Price</div>
                    <div class="fw-semibold">@String.Format("{0:C}", Model.TotalPrice)</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small mb-1">Status</div>
                    <span class="badge @statusClass">@Model.Status</span>
                </div>

                <div class="col-md-12">
                    <div class="text-muted small mb-1">Special Requests</div>
                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(Model.SpecialRequests) ? Model.SpecialRequests : "—")</div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id) <!-- ensure id posts correctly -->

                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Delete
                </button>
                <a href="@Url.Action("Details","Booking", new { id = Model.Id })" class="btn btn-outline-secondary">
                    Cancel
                </a>
            }
        </div>
    </div>
</div>

<style>
    .btn-brand {
        background-color: #8e4433;
        color: #fff;
        border: 0;
    }

        .btn-brand:hover {
            background-color: #6b3025;
            color: #fff;
        }
</style>
