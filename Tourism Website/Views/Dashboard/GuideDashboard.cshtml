@{
    ViewBag.Title = "Guide Dashboard";
}

<div class="container mt-4">
    <h2 style="color: #8e4433;">Guide Dashboard</h2>
    <p>View your assigned tours and bookings.</p>

    <a href="@Url.Action("Index", "Tour")" class="btn edit-btn me-3 mb-2">
        <i class="fa fa-route"></i> Assigned Tours
    </a>
    <a href="@Url.Action("Index", "Booking")" class="btn book-btn mb-2">
        <i class="fa fa-ticket-alt"></i> My Bookings
    </a>
</div>

<style>
    .btn {
        background-color: #8e4433 !important;
        color: #fff !important;
        border: none !important;
        transition: background-color 0.3s;
    }

    .edit-btn:hover {
        background-color: blue !important;
    }

    .book-btn:hover {
        background-color: green !important;
    }

    .btn i {
        margin-right: 5px;
    }
</style>
