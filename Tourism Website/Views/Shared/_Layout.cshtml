@{
    Layout = null;
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var userRole = (Session["UserRole"] as string) ?? "";
    var userName = User.Identity.IsAuthenticated ? (Session["UserName"] as string ?? User.Identity.Name) : "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tourism Website</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/css/tours.css" />

    @Scripts.Render("~/bundles/modernizr")

    <style>
        :root {
            --brand: #8e4433;
            --brand-dark: #6b3025;
        }

        html {
            scroll-behavior: smooth;
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
        }

        .navbar {
            background-color: var(--brand);
        }

        .nav-link.active, .nav-link:hover {
            opacity: .9;
        }

        .btn-brand {
            background-color: var(--brand);
            color: #fff;
            border: 0;
        }

            .btn-brand:hover {
                background-color: var(--brand-dark);
                color: #fff;
            }

        footer {
            background-color: var(--brand);
            color: #fff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container">
            @Html.ActionLink("Tourism Website", "Index", "Home", null, new { @class = "navbar-brand fw-bold" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
                    aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "Index" ? "active" : "") })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "About" ? "active" : "") })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Tours", "Index", "Tour", null,
                            new { @class = "nav-link " + (currentController == "Tour" ? "active" : "") })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Booking", "Index", "Booking", null,
                            new { @class = "nav-link " + (currentController == "Booking" ? "active" : "") })
                    </li>

                    <!-- Admin only -->
                    @if (userRole == "Admin")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Users", "Index", "User", null,
                                new { @class = "nav-link " + (currentController == "User" ? "active" : "") })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Role Requests", "PendingRoleRequests", "Admin", null,
                                new { @class = "nav-link " + (currentController == "Admin" && currentAction == "PendingRoleRequests" ? "active" : "") })
                        </li>
                    }

                    <!-- Manage Tours: Admin, Agency, Guide -->
                    @if (userRole == "Admin" || userRole == "Agency" || userRole == "Guide")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Tours", "Index", "Tour", null,
                                new { @class = "nav-link " + (currentController == "Tour" && currentAction == "Index" ? "active" : "") })
                        </li>
                    }

                    <!-- Manage Bookings: Admin, Agency, Guide -->
                    @if (userRole == "Admin" || userRole == "Agency" || userRole == "Guide")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Bookings", "Index", "Booking", null,
                                new { @class = "nav-link " + (currentController == "Booking" ? "active" : "") })
                        </li>
                    }

                    <!-- Feedback visible to all -->
                    <li class="nav-item">
                        @Html.ActionLink("Feedback", "Index", "Feedback", null,
                            new { @class = "nav-link " + (currentController == "Feedback" ? "active" : "") })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "Contact" ? "active" : "") })
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3">Hello, @userName</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-outline-light" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-outline-light" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4" id="pageContent">
        @RenderBody()
    </div>

    <footer class="text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Tourism Website | Built with ASP.NET MVC &amp; Bootstrap</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
