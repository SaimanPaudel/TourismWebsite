@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var userRole = (Session["UserRole"] as string) ?? "";
    var userName = User.Identity.IsAuthenticated ? (Session["UserName"] as string ?? User.Identity.Name) : "";

    bool isAdmin = userRole == "Admin";
    bool isAgency = userRole == "Agency";
    bool isGuide = userRole == "Guide";
    bool canManage = isAdmin || isAgency || isGuide;

    Func<string, string, bool> isActive = (ctrl, act) =>
        string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
        (string.IsNullOrEmpty(act) || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase));
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tourism Website</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/css/tours.css" />

    @Scripts.Render("~/bundles/modernizr")

    <style>
        :root {
            --brand: #8e4433;
            --brand-dark: #6b3025;
            --brand-50: #a35a4b;
        }

        html {
            scroll-behavior: smooth;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
            background: linear-gradient(180deg, var(--brand) 0%, var(--brand-50) 120%);
            border-bottom: 1px solid rgba(255,255,255,.15);
        }

            .navbar .navbar-brand {
                color: #fff;
                font-weight: 800;
                letter-spacing: .2px;
            }

            .navbar .nav-link {
                color: rgba(255,255,255,.95) !important;
                position: relative;
                padding-left: .75rem;
                padding-right: .75rem;
            }

                .navbar .nav-link::after {
                    content: "";
                    position: absolute;
                    left: .75rem;
                    right: .75rem;
                    bottom: .25rem;
                    height: 2px;
                    background: #fff;
                    opacity: 0;
                    transform: scaleX(0);
                    transition: transform .25s ease, opacity .25s ease;
                }

                .navbar .nav-link:hover::after {
                    opacity: .75;
                    transform: scaleX(1);
                }

                .navbar .nav-link.active,
                .navbar .show > .nav-link {
                    background: rgba(255,255,255,.12);
                    border-radius: .5rem;
                }

        .dropdown-menu {
            border: 0;
            box-shadow: 0 12px 24px rgba(0,0,0,.15);
        }

        .btn-outline-light {
            --bs-btn-color: #fff;
            --bs-btn-border-color: rgba(255,255,255,.65);
            --bs-btn-hover-bg: #fff;
            --bs-btn-hover-color: var(--brand);
            --bs-btn-hover-border-color: #fff;
        }

        .btn-brand {
            background-color: var(--brand);
            color: #fff;
            border: 0;
        }

            .btn-brand:hover {
                background-color: var(--brand-dark);
                color: #fff;
            }

        footer {
            background: var(--brand);
            color: #fff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container">
            @Html.ActionLink("Tourism Website", "Index", "Home", null, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar"
                    aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNavbar">
                <!-- Left: Main navigation -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link @(isActive("Home","Index") ? "active" : "")"
                           href="@Url.Action("Index","Home")">
                            <i class="fa fa-house"></i> Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController.Equals("Tour", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                           href="@Url.Action("Index","Tour")">
                            <i class="fa fa-map-location-dot"></i> Tours
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController.Equals("Booking", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                           href="@Url.Action("Index","Booking")">
                            <i class="fa fa-ticket"></i> Bookings
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController.Equals("Feedback", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                           href="@Url.Action("Index","Feedback")">
                            <i class="fa fa-comments"></i> Feedback
                        </a>
                    </li>

                    <!-- Manage dropdown (Admin/Agency/Guide) -->
                    @if (canManage)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @( (currentController=="Tour" && currentAction=="Index") || currentController=="User" || currentController=="Admin" ? "active" : "" )"
                               href="#" id="manageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-screwdriver-wrench"></i> Manage
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="manageDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index","Tour")">
                                        <i class="fa fa-route me-2"></i> Manage Tours
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index","Booking")">
                                        <i class="fa fa-clipboard-list me-2"></i> Manage Bookings
                                    </a>
                                </li>

                                @if (isAdmin)
                                {
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index","User")">
                                            <i class="fa fa-users-gear me-2"></i> Manage Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("PendingRoleRequests","Admin")">
                                            <i class="fa fa-id-badge me-2"></i> Role Requests
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }

                    <!-- Keep About & Contact at the END -->
                    <li class="nav-item">
                        <a class="nav-link @(isActive("Home","About") ? "active" : "")"
                           href="@Url.Action("About","Home")">
                            <i class="fa fa-circle-info"></i> About
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(isActive("Home","Contact") ? "active" : "")"
                           href="@Url.Action("Contact","Home")">
                            <i class="fa fa-envelope"></i> Contact
                        </a>
                    </li>
                </ul>

                <!-- Right: Auth -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-2"><i class="fa fa-user"></i> Hello, @userName</span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-light" href="@Url.Action("Logout","Account")">
                                <i class="fa fa-right-from-bracket"></i> Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-light" href="@Url.Action("Login","Account")">
                                <i class="fa fa-right-to-bracket"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4" id="pageContent">
        @RenderBody()
    </div>

    <footer class="text-center py-3 mt-4">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Tourism Website | Built with ASP.NET MVC &amp; Bootstrap</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
