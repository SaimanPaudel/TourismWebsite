@using System
@using Tourism_Website.Data

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tourism Website</title>
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Custom CSS -->
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/css/tours.css" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html {
            scroll-behavior: smooth;
        }

        .navbar .badge {
            margin-left: 6px;
        }
    </style>
</head>
<body>
    @{
        string currentController = ViewContext.RouteData.Values["controller"].ToString();
        string currentAction = ViewContext.RouteData.Values["action"].ToString();
        var userRole = Session["UserRole"] as string ?? "";
        var displayName = (Session["UserName"] as string) ?? User.Identity.Name;

        // Inline pending count for Admin badge (simple + safe)
        int pendingRoleCount = 0;
        if (string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase))
        {
            try
            {
                using (var _ctx = new Tourism_WebsiteContext())
                {
                    pendingRoleCount = _ctx.Users.Count(u => u.RequestedRole != null && u.IsRoleApproved == null);
                }
            }
            catch
            {
                // ignore layout-time DB errors to avoid breaking the page
                pendingRoleCount = 0;
            }
        }
    }

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background-color: #8e4433;">
        <div class="container">
            @Html.ActionLink("Tourism Website", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar" aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "Index" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "About" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tours", "Index", "Tour", null,
                            new { @class = "nav-link " + (currentController == "Tour" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Booking", "Index", "Booking", null,
                            new { @class = "nav-link " + (currentController == "Booking" ? "active" : "") })
                    </li>

                    @* Admin-only links *@
                    @if (userRole == "Admin")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Users", "Index", "User", null,
                                new { @class = "nav-link " + (currentController == "User" ? "active" : "") })
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Admin" && currentAction == "PendingRoleRequests" ? "active" : "")"
                               href="@Url.Action("PendingRoleRequests", "Admin")">
                                Role Requests
                                @if (pendingRoleCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">@pendingRoleCount</span>
                                }
                            </a>
                        </li>
                    }

                    @* Manage Tours to Admin and Agency *@
                    @if (userRole == "Admin" || userRole == "Agency")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Tours", "Index", "Tour", null, new { @class = "nav-link" })
                        </li>
                    }

                    @* Manage Bookings to Admin, Agency, Guide *@
                    @if (userRole == "Admin" || userRole == "Agency" || userRole == "Guide")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Manage Bookings", "Index", "Booking", null, new { @class = "nav-link" })
                        </li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Feedback", "Index", "Feedback", null,
                            new { @class = "nav-link " + (currentController == "Feedback" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null,
                            new { @class = "nav-link " + (currentController == "Home" && currentAction == "Contact" ? "active" : "") })
                    </li>
                </ul>

                <!-- Right-side Login/Logout -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">Hello, @displayName</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-outline-light" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-outline-light" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- TempData alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Content -->
    <div class="container mt-4" id="pageContent">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center text-white py-3 mt-4" style="background-color: #8e4433;">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Tourism Website | Built with ASP.NET MVC & Bootstrap</p>
        </div>
    </footer>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
