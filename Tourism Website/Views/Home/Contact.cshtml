@{
    ViewBag.Title = "Contact";
}
<link rel="stylesheet" href="~/Content/contact/css/contact.css" />
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #f8f2f0;">
                <div class="card-header text-white text-center py-3" style="background-color: #8e4433;">
                    <h2 class="mb-0">Contact Us</h2>
                </div>
                <div class="card-body p-4">
                    @if (TempData["ThankYouMessage"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert" style="border-radius:8px;">
                            @TempData["ThankYouMessage"]
                        </div>
                    }
                    <p class="lead">
                        We'd love to hear from you! Whether you have questions, feedback, or need assistance, feel free to reach out.
                    </p>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3 h-100" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Email</h5>
                                <p><a href="mailto:info@travelnerds.com" style="color: #8e4433;">info@tourismwebsite.com</a></p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3 h-100" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Phone</h5>
                                <p>+1 (123) 456-7890</p>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Address</h5>
                                <p>123 Tourism St, Adventure City, Travel State, 45678</p>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control rounded-3" id="name" name="name" placeholder="Enter your name" required />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control rounded-3" id="email" name="email" placeholder="Enter your email" required />
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control rounded-3" id="message" name="message" rows="5" placeholder="Write your message" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn send-message-btn rounded-3 px-4 py-2">
                                <i class="fa fa-paper-plane"></i> Send Message
                            </button>
                        </div>
                    }
                    <p class="text-muted mt-3 text-center">
                        We aim to respond within 24 hours. Thank you for contacting us!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
