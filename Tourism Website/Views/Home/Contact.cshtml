@{
    ViewBag.Title = "Contact";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #f8f2f0;">
                <div class="card-header text-white text-center py-3" style="background-color: #8e4433;">
                    <h2 class="mb-0">Contact Us</h2>
                </div>
                <div class="card-body p-4">
                    <p class="lead">
                        We'd love to hear from you! Whether you have questions, feedback, or need assistance, feel free to reach out.
                    </p>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3 h-100" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Email</h5>
                                <p><a href="mailto:info@tourismwebsite.com" style="color: #8e4433;">info@tourismwebsite.com</a></p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3 h-100" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Phone</h5>
                                <p>+1 (123) 456-7890</p>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="card border-0 shadow-sm rounded-3 p-3" style="background-color: rgba(255,255,255,0.9);">
                                <h5>Address</h5>
                                <p>123 Tourism St, Adventure City, Travel State, 45678</p>
                            </div>
                        </div>
                    </div>

                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control rounded-3" id="name" placeholder="Enter your name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control rounded-3" id="email" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control rounded-3" id="message" rows="5" placeholder="Write your message"></textarea>
                        </div>
                        <button type="submit" class="btn rounded-3 px-4" style="background-color: #8e4433; color: #fff;">Send Message</button>
                    </form>

                    <p class="text-muted mt-3 text-center">
                        We aim to respond within 24 hours. Thank you for contacting us!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
