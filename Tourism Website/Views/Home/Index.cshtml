@{
    ViewBag.Title = "Home";
}

<style>
    /* Fullscreen video background */
    .video-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Overlay content */
    .video-overlay {
        position: relative;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #fff;
    }

        .video-overlay h1 {
            font-size: 3rem;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
        }

        .video-overlay p {
            font-size: 1.5rem;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.5);
        }

    /* Ensure page has no scrollbars due to video */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden;
    }
</style>

<!-- Video Background -->
<video autoplay muted loop class="video-bg">
    <source src="~/Content/Images/scenery.mp4" type="video/mp4">
    Your browser does not support the video tag.
</video>

<!-- Overlay content -->
<div class="video-overlay">
    <h1>Welcome to Travel Nerds </h1>
    <p>Explore amazing tours and travel experiences</p>
    <!-- Optional buttons -->
    <a href="@Url.Action("About", "Home")" class="btn btn-lg" style="background-color: #8e4433; color: #fff; margin-top: 20px;">Learn More</a>
</div>
